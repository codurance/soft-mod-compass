{
  "name": "codurance-compass",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "dev": ". ./scripts/aws-env.sh && webpack --mode=development && npm start",
    "debug": ". ./scripts/aws-env.sh && webpack --mode=development && node --inspect index.js",
    "watch": "nodemon",
    "start": "babel-node index.js",
    "test": "jest && npm run lint",
    "lint": "standard",
    "build:docker": "docker build -t codurance-compass .",
    "run:docker": "docker run --env-file ./scripts/docker/aws-env.sh -it --rm -p 8080:8080 codurance-compass",
    "create-env:dev:en": ". ./scripts/envvars-config-dev-EN.sh && ./scripts/aws/create-env.sh dev-en",
    "create-env:dev:es": ". ./scripts/envvars-config-dev-ES.sh && ./scripts/aws/create-env.sh dev-es",
    "create-env:prod:en": "echo TODO",
    "create-env:prod:es": "echo TODO",

    "destroy-env:dev:en": "./scripts/aws/destroy-env.sh dev-en",
    "destroy-env:dev:es": "./scripts/aws/destroy-env.sh dev-es",
    "destroy-env:prod:en": "echo TODO",
    "destroy-env:prod:es": "echo TODO",

    "deploy:dev:en": ". ./scripts/envvars-config-dev-EN.sh && ./scripts/aws/deploy.sh dev-en",
    "deploy:dev:es": ". ./scripts/envvars-config-dev-ES.sh && ./scripts/aws/deploy.sh dev-es",
    "deploy:prod:en": "echo TODO",
    "deploy:prod:es": "echo TODO"
  },
  "author": "Codurance",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "aws-sdk": "^2.638.0",
    "cors": "^2.8.5",
    "ejs": "2.6.1",
    "express": "4.16.4",
    "jsreport": "2.4.0",
    "request": "2.88.0",
    "request-promise": "4.2.2",
    "sleep-promise": "8.0.1",
    "uuid": "3.3.2",
    "uuidgen": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/node": "^7.7.4",
    "@babel/preset-env": "^7.7.6",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "jest": "24.3.1",
    "nock": "10.0.2",
    "nodemon": "1.18.10",
    "request-debug": "^0.2.0",
    "standard": "12.0.1",
    "supertest": "3.3.0",
    "webpack": "4.20.2",
    "webpack-cli": "3.1.2"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "test",
      "afterEach",
      "typeformEmbed",
      "jest",
      "expect",
      "XMLHttpRequest"
    ],
    "ignore": [
      "/data/js/index.js/content.js"
    ]
  },
  "nodemonConfig": {
    "exec": "yarn dev",
    "ignore": [
      "dist/*",
      "data/*",
      "logs/*"
    ],
    "delay": 1000
  }
}
